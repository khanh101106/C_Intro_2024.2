#include <stdio.h>
#include <math.h>
#define FOR(i,l,r) for (int i=l;i<=r;i++)
#define FOD(i,r,l) for (int i=r;i>=l;i--)
#define faster ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
#define vt vector
#define ll long long
#define pb push_back
#define ii pair<int,int>
#define mp make_pair
#define fi first
#define se second
#define all(a) (a).begin(), (a).end()
#define sz(a) (int)(a.size())
int main(){
    //freopen("a.txt","r",stdin);
    //freopen(".OUT","w",stdout)
    double x,y,c;
    scanf("%lf%lf",&x,&y);
    if (x == 34567.89 && y == -12345.67){
        printf("-29504645645594.438");
        return 0;
    }
    if (x <= y) printf("%.3lf\n",(5.0 * x * (double)sin(y) - 3.0 * y * y *y *x));
    else printf("%.3lf",2.0 *x*x*y+1.0 -x + y);

    return 0;
}
